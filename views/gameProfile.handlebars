<div class="gameCard">
	<div class="cardHeader">
		<h4>{{ gameInfo.game_name }}</h4>
	</div>
	<div class="gameImg">
		<img src="../../public/images/{{gameInfo.game_picture}}.jpg" />
	</div>
	<div class="gameRating">
		<h4>
			{{#if gameInfo.reviews}}
			{{averageOut gameInfo.reviews}}
			out of out of {{gameInfo.reviews.length}} reviews
			{{else}}No reviews yet
			{{/if}}
		</h4>
	</div>
	<div class="gameProfile">
		<p>
			{{ gameInfo.game_desc }}
		</p>
	</div>
	<div class="reviewTitle">
		<h4>R E V I E W S</h4>
	</div>
	{{#if gameInfo.reviews}}
	{{#each gameInfo.reviews as |review| }}
	{{>reviews review}} {{!-- links to the 'partials' view --}}
	{{/each}}
	{{/if}}
</div>

<link rel="stylesheet" href="/css/style.css" />
<script src="/js/register.js"></script>
<script src="/js/logout.js"></script>
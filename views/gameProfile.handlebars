{{!-- These will be the game cards that show up for each game --}}
<div class="gameProfileSection">
	<div class="row">
		<div class="gameCard">
			<div class="cardHeader">
				<h4 class="gameTitle"> {{gameInfo.game_name}} </h4>
				<h4 class="gameRating">
					{{#if gameInfo.reviews}}
					{{averageOut gameInfo.reviews}}
					out of out of
					{{gameInfo.reviews.length}}
					reviews â˜…
					{{else}}No reviews yet
					{{/if}}
				</h4>
			</div>
			<div class="gameImg">
				<img src="/images/{{gameInfo.picture}}" />
			</div>
			<div class="gameProfile">
				<p>{{gameInfo.game_desc}}</p>
			</div>
			<div class="gameRating">
			<h4>
				{{#if gameInfo.reviews}}
				{{averageOut gameInfo.reviews}}
				out of {{gameInfo.reviews.length}} reviews
				{{else}}No reviews yet
				{{/if}}
			</h4>
		</div>
		</div>
		<div class="reviewTitle">
			<h4>R E V I E W S</h4>
		</div>
		<div class="gameReviewCard">

		{{#if gameInfo.reviews}}
		{{#each gameInfo.reviews as |review| }}
		{{>reviews review}} {{!-- links to the 'partials' view --}}
		{{/each}}
		{{/if}}
	</div>
	<!-- Area where users can add their game reviews -->
					<div class="addReview">
						<form class="review-form">
							<div class="reviewCard">
								<label for="review-comment" class="form-label review-form">
									YOUR REVIEW HERE
									<div>
										<button type="submit" class="submitReviewBtn">ADD REVIEW</button>
									</div>	
								</label>
								<textarea id="review-comment" name="user-review" rows="4" cols="50">
								</textarea>
							</div>
										
						</form>
				</div>


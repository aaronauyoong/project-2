<div class="gameProfileSection" id="{{gameInfo.id}}">
	<div class="gameCard">
		<div class="cardHeader">
			<div class="row">
				<div class="gameImg">
					<img src="/images/{{gameInfo.picture}}" />
				</div>
				<h4 class="gameTitle"> {{gameInfo.game_name}} </h4>
				<h4 class="gameRating">
					{{#if gameInfo.reviews}}
					{{averageOut gameInfo.reviews}}
					/5 â˜…
					{{else}}No reviews yet
					{{/if}}
				</h4>
				<h6 class="totalReviews">Total reviews: {{gameInfo.reviews.length}}</h6>
			</div>
		</div>
		<div class="gameProfile">
			<p>{{gameInfo.game_desc}}</p>
		</div>
	</div>
</div>
<div class="gameReviewCard">
	<div class="reviewTitle">
		<h4>R E V I E W S</h4>
	</div>
	{{#if gameInfo.reviews}}
	{{#each gameInfo.reviews as |review| }}
	{{>reviews review}}
	{{/each}}
	{{/if}}
</div>
<div class="addReview">
	{{#if loggedIn}}
	<div class="gameRate" id="default">
		<div class="review-form">
			<div class="reviewCard">
				<label for="reviewComment" class="form-label review-form">
					YOUR REVIEW HERE
					<div>
						<button class="submitReviewBtn" id="submit-btn">ADD REVIEW</button>
					</div>
				</label>
				<textarea id="reviewComment" name="user-review" rows="4" cols="50" aria-setsize="fixed">
					</textarea>
			</div>
		</div>
		<p class="profileDetails" id="problem"></p>
		<input type="radio" visibility="hidden" class="star" id="star5" name="rate" value="5" />
		<label for="star5" title="text">5 stars</label>
		<input type="radio" class="star" id="star4" name="rate" value="4" />
		<label for="star4" title="text">4 stars</label>
		<input type="radio" class="star" id="star3" name="rate" value="3" />
		<label for="star3" title="text">3 stars</label>
		<input type="radio" class="star" id="star2" name="rate" value="2" />
		<label for="star2" title="text">2 stars</label>
		<input type="radio" class="star" id="star1" name="rate" value="1" />
		<label for="star1" title="text">1 star</label>
	</div>
	{{else}}
	<div class="createAccount"><a href='/login' id="alt-button">LOGIN</a> - TO LEAVE A
		REVIEW</div>
	{{/if}}
</div>
<script src="/js/addReview.js"></script>